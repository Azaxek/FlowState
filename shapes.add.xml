<additional>
    <!-- Background Grass -->
    <poly id="grass_bg" color="50,200,50" fill="true" layer="-1">
        <param key="texture" value="nature/grass.jpg"/> <!-- SUMO often defaults if missing, or just uses color -->
        <shape>-500,-500 500,-500 500,500 -500,500</shape>
    </poly>

    <!-- Buildings (Extruded Polygons for pseudo-3D) -->
    <!-- North West Block -->
    <poly id="bldg_nw_1" color="200,200,220" fill="true" layer="1">
        <shape>-40,40 -90,40 -90,90 -40,90</shape>
    </poly>
    <poly id="bldg_nw_2" color="180,180,200" fill="true" layer="1">
        <shape>-100,20 -150,20 -150,80 -100,80</shape>
    </poly>

    <!-- North East Block -->
    <poly id="bldg_ne_1" color="200,200,220" fill="true" layer="1">
        <shape>40,40 90,40 90,90 40,90</shape>
    </poly>
    <poly id="bldg_ne_2" color="180,180,200" fill="true" layer="1">
        <shape>100,20 150,20 150,80 100,80</shape>
    </poly>

    <!-- South West Block -->
    <poly id="bldg_sw_1" color="200,200,220" fill="true" layer="1">
        <shape>-40,-40 -90,-40 -90,-90 -40,-90</shape>
    </poly>
    <poly id="bldg_sw_2" color="180,180,200" fill="true" layer="1">
        <shape>-100,-20 -150,-20 -150,-80 -100,-80</shape>
    </poly>

    <!-- South East Block -->
    <poly id="bldg_se_1" color="200,200,220" fill="true" layer="1">
        <shape>40,-40 90,-40 90,-90 40,-90</shape>
    </poly>
    <poly id="bldg_se_2" color="180,180,200" fill="true" layer="1">
        <shape>100,-20 150,-20 150,-80 100,-80</shape>
    </poly>
</additional>
